# 마크다운 파일의 프론트매터 정리
changed_md_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(md|markdown)$' || true)

if [ -n "$changed_md_files" ]; then
  echo "📝 마크다운 파일의 프론트매터를 정리합니다..."
  node scripts/clean-frontmatter.js
  
  # 프론트매터 정리 후 다시 스테이징
  git add $changed_md_files
else
  echo "📝 변경된 마크다운 파일이 없어 프론트매터 정리를 건너뜁니다."
fi